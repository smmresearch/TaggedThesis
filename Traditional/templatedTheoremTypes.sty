\ProvidesPackage{templatedTheoremTypes}
\RequirePackage{amsthm}

\let\oldemptyset\emptyset
\let\emptyset\varnothing

\newtheorem{theorem}{Theorem}[chapter]
\renewcommand\theHtheorem{\thesubsection.\arabic {theorem}}
\newtheorem*{theorem*}{Theorem}
\newtheorem{corollary}{Corollary}[chapter]
\renewcommand\theHcorollary{\thesubsection.\arabic {corollary}}
\newtheorem{conjecture}{Conjecture}[chapter]
\renewcommand\theHconjecture{\thesubsection.\arabic {conjecture}}
\newtheorem{lemma}{Lemma}[chapter]
\renewcommand\theHlemma{\thesubsection.\arabic {lemma}}
\newtheorem{proposition}{Proposition}[chapter]
\renewcommand\theHproposition{\thesubsection.\arabic {proposition}}
\theoremstyle{definition}
\newtheorem{definition}{Definition}[chapter]
\renewcommand\theHdefinition{\thesubsection.\arabic {definition}}
\theoremstyle{remark}
\newtheorem{remarkN}{Remark}[chapter]
\renewcommand\theHremarkN{\thesubsection.\arabic {remarkN}}
\newtheorem*{remark}{Remark}
\newtheorem*{claim}{Claim}

\AtBeginDocument{
  \providecommand\theoremautorefname{Theorem}
  \providecommand\lemmaautorefname{Lemma}
  \providecommand\conjectureautorefname{Conjecture}
  \providecommand\corollaryautorefname{Corollary}
  \providecommand\propositionautorefname{Proposition}
  \providecommand\definitionautorefname{Definition}
  \providecommand\remarkautorefname{Remark}
  \providecommand\claimautorefname{Claim}
}

\makeatletter
\newtheoremstyle{indenteddef}
{3pt}% space before
{3pt}% space after
{\addtolength{\@totalleftmargin}{3.5em}
  \addtolength{\linewidth}{-3.5em}
  \parshape 1 3.5em \linewidth}% body font
{}% indent
{\bfseries}% header font
{.}% punctuation
{.5em}% after theorem header
{}% header specification (empty for default)
\makeatother
\theoremstyle{definition}
\newtheorem{case}{Case}
%use \setcounter{case}{0} as needed as well within document
\makeatletter\@addtoreset{case}{theorem}\makeatother
\makeatletter\@addtoreset{case}{proposition}\makeatother
\makeatletter\@addtoreset{case}{corollary}\makeatother
\makeatletter\@addtoreset{case}{lemma}\makeatother
\theoremstyle{indenteddef}
\newtheorem{subcase}{Case}[case]
\newtheorem{subsubcase}{Case}[subcase]
\makeatletter
\newtheoremstyle{indentedproof}
{3pt}% space before
{3pt}% space after
{\addtolength{\@totalleftmargin}{3.5em}
  \addtolength{\linewidth}{-3.5em}
  \parshape 1 3.5em \linewidth}% body font
{}% indent
{\itshape}% header font
{.}% punctuation
{.5em}% after theorem header
{}% header specification (empty for default)
\makeatother
\theoremstyle{indentedproof}
\newtheorem*{subproof}{Proof}
